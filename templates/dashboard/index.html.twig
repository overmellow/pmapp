{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block title %}Dashboard!{% endblock %}

{% block body %}

    {% include 'menu.html.twig' with {'user.email': user.email } %}

    <div class="container">
        <div>
            <h1>List of Lotteries</h1>
            <div class="divider"></div>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Lottery Number</th>
                        <th scope="col">Size</th>
                        <th scope="col">Ticket Amount</th>
                        <th scope="col">Jackpot</th>
                        <th scope="col">Start At</th>
                        {# <th scope="col">Close At</th> #}
                        <th scope="col">Play</th>
                    </tr>
                </thead>
                <tbody>
                    {% for lottery in lotteries %}
                    <tr>
                        <th scope="row">{{ lottery.id }}</th>
                        <td>{{ lottery.lotteryNumber }}</td>
                        <td>{{ lottery.size }}</td>
                        <td>{{ lottery.ticketAmount }}</td>
                        <td>{{ lottery.jackpot }}</td>
                        <td>{{ lottery.startAt | date('Y-m-d H:i:s') }}</td>
                        {# <td>{{ lottery.closeAt | date('Y-m-d H:i:s') }}</td> #}
                        <td><a class="btn btn-success" href="/dashboard/play/{{ lottery.id }}">Play</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div>
            <h1>List of Tickets</h1>
            <div class="divider">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Lottery Number</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for ticket in tickets %}
                    <tr>
                        <th scope="row">{{ ticket.id }}</th>
                        <td>{{ ticket.ticketNumber }}</td>

                        <td><a class="btn btn-success" href="/dashboard/ticket/{{ ticket.id }}">Detail</a></td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>    
    </div>
</div>
    {% include 'footer.html.twig' %}

{% endblock %}