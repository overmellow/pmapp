{% extends 'base.html.twig' %}

{% block stylesheets %}
{% endblock %}

{% block title %}Dashboard!{% endblock %}

{% block body %}

    {% include 'menu.html.twig' with {'user.email': user.email } %}

    <!-- online-ticket-section start -->
    <section class="online-ticket-section section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-header text-center">
                    <h2 class="section-title">All Current Lotteries to Buy</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                {% for lottery in lotteries %}

                <div class="col-lg-4 col-sm-6">
                    <div class="jackpot-item text-center">
                    <img src="{{ asset('assets/images/theme/elements/jackpot-1.png') }}" alt="image">
                    <span class="amount">${{ lottery.jackpot | number_format(2, '.', ',') }}</span>
                    <h5 class="title">{{ lottery.lotteryNumber }}</h5>
                    <p class="next-draw-time">Ticket Price: ${{ lottery.ticketAmount | number_format(2, '.', ',') }}</p>
                    <p class="next-draw-time">Started At: {{ lottery.startAt | date('Y-m-d H:i:s') }}</p>
                    {# <p class="next-draw-time">Next Draw : <span id="remainTime1"></span></p> #}
                    <a href="/dashboard/play/{{ lottery.id }}" class="cmn-btn">play now!</a>
                    </div>
                </div><!-- jackpot-item end -->

                {% endfor %}
            </div>
        </div>
    </section>


    <!-- cart-section start -->
    <section class="cart-section section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-header text-center">
                    <h2 class="section-title">Purchased Tickets</h2>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-area d-flex">
                        <div class="col-lg-12">
                            <div class="cart-table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Size</th>
                                            <th>Ticket Amount</th>
                                            <th>Jackpot</th>
                                            <th>discount</th>
                                            <th>details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for ticket in tickets %}
                                        <tr>
                                            <td>{{ ticket.id }}</td>
                                            <td>{{ ticket.ticketNumber }}</td>
                                            <td><i class="fa fa-times"></i></td>
                                            <td>$7.00</td>
                                            <td>$0.00</td>
                                            <td><a class="btn btn-success" href="/dashboard/ticket/{{ ticket.id }}"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            {# <span class="pull-right mt-3">1 item</span> #}
                        </div>                    
                    </div>
                </div>
            </div>                    
        </div>
    </section>
    <!-- cart-section end -->

    <!-- cart-section start -->
    <section class="cart-section section-padding">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                    <div class="section-header text-center">
                    <h2 class="section-title">Pending Tickets</h2>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="cart-area d-flex">
                        <div class="col-lg-12">
                            <div class="cart-table">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Size</th>
                                            <th>Ticket Number</th>
                                            <th>Jackpot</th>
                                            <th>discount</th>
                                            <th>details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for tempTicket in tempTickets %}
                                        <tr>
                                            <td>{{ tempTicket.id }}</td>
                                            <td>{{ tempTicket.ticketNumber }}</td>
                                            <td><i class="fa fa-times"></i></td>
                                            <td>$7.00</td>
                                            <td>$0.00</td>
                                            <td><a class="btn btn-success" href="/dashboard/tempTicket/{{ tempTicket.id }}"><i class="fa fa-trash"></i></a></td>
                                        </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                            {# <span class="pull-right mt-3">1 item</span> #}
                        </div>                    
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- cart-section end -->

    {% include 'footer.html.twig' %}

{% endblock %}