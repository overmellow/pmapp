{% extends 'base.html.twig' %}

{% block title %} Profile{% endblock %}

{% block body %}

    {% include 'menu.html.twig' %}
    <div class="container my-5">
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="password-tab" data-toggle="tab" href="#password" role="tab" aria-controls="password" aria-selected="true">Password</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Profile</a>
            </li>
            <li class="nav-item">
                <a class="nav-link disabled" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false">Contact</a>
            </li>
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="password" role="tabpanel" aria-labelledby="password-tab">
                    <div class="card d-flex justify-content-center">
                        <h5 class="card-header">Reset Password</h5>
                        <div class="card-body">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >

                            <button class="btn btn-primary btn-block" type="submit">
                                Reset Password
                            </button>
                            {{ form_end(form) }}
                        </div>

                    </div>
                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">...</div>
                <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">...</div>
            </div>
            
    </div>    
    {# <div class="container mb-5">

        <h3>Profile</h3>
        <hr>
        {{ form(form) }} 
    </div> #}

    {% include 'footer.html.twig' %}    
{% endblock %}
