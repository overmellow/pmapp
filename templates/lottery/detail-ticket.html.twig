{% extends 'base.html.twig' %}

{% block title %}Hello LotteryController!{% endblock %}

{% block body %}

    {% include 'admin-menu.html.twig' %}

    <div class="container mb-5">
        <div class="card">
            <div class="card-header">
                <h5>Ticket Details</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row">
                            <div class="col s6"> 
                                Ticket Ref #:
                            </div>
                            <div class="col s6">
                                {{ticket.id}}    
                            </div>
                        </div>
                        </li>
                        <li class="list-group-item">
                        <div class="row">        
                            <div class="col s6">
                                Ticket No:
                            </div>
                            <div class="col s6">
                                {{ticket.TicketNumber}}
                            </div>
                        </div>
                        </li>
                        <li class="list-group-item">
                        <div class="row">        
                            <div class="col s6">
                                Lottery Ref #:
                            </div>
                            <div class="col s6">
                                {{ticket.Lottery.id}}
                            </div>
                        </div>
                        </li>
                        <li class="list-group-item">
                        <div class="row">        
                            <div class="col s6">
                                Lottery No:
                            </div>
                            <div class="col s6">
                                {{ticket.Lottery.LotteryNumber}}
                            </div>
                        </div>    
                        </li>
                        <li class="list-group-item">
                            <div class="row">        
                                <div class="col s6">
                                    Purchase At:
                                </div>
                                <div class="col s6">
                                    {{ticket.PurchasedAt | date}}
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">        
                                <div class="col s6">
                                    Bitcoin Transaction No:
                                </div>
                                <div class="col s6">
                                    {{ticket.BitcoinTransactionNumber}}
                                </div>
                            </div>
                        </li>
                        <li class="list-group-item">
                            <div class="row">        
                                <div class="col s6">
                                    Bitcoin Transaction Date:
                                </div>
                                <div class="col s6">
                                    {{ticket.BitcoinTransactionDate | date}}
                                </div>
                            </div>
                        </li>
                    </ul>                                                        
                </div>               
                {% if ticket.status != 'verified' %}
                <div class="card-footer">
                    {{ form(form) }}
                </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% include 'footer.html.twig' %}    
{% endblock %}
